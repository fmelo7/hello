{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "plugins": ["chai-friendly"],
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "no-console": "error",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": "off",
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": {
                    "minProperties": 1
                },
                "ObjectPattern": {
                    "multiline": false
                }
            }
        ],
        "max-len": ["error", 140],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "linebreak-style": 0,
        "global-require": 0
    }
}
